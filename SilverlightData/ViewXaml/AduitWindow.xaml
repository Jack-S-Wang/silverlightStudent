<UserControl x:Class="SilverlightData.ViewXaml.AduitWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ncs="clr-namespace:NCS.UI.Controls;assembly=NCS.SilverlightLib"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <ncs:QueryForm x:Name="queryExamine" Loaded="queryExamine_Loaded" StartQuery="queryExamine_StartQuery" queryReject.EntityCheckedPropertyName = "IsCheck">
            <ncs:QueryForm.CustomControlBottomPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="BtnApprove" Click="BtnApprove_Click" Content="批准" Grid.Column="0" />
                    <Button x:Name="BtnReject" Click="BtnReject_Click" Content="拒绝" Grid.Column="1"/>
                </Grid>
            </ncs:QueryForm.CustomControlBottomPanel>
        </ncs:QueryForm>
    </Grid>
</UserControl>
